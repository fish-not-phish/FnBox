# ================================
# FnBox Platform Configuration
# ================================
# Copy this file to .env and customize for your environment

# === Core Django Settings ===
DEBUG=1  # Set to 0 in production
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION  # Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
ALLOWED_HOSTS=127.0.0.1,localhost
CUSTOM_DOMAIN=127.0.0.1:3000

# === Database Configuration ===
DB_NAME=fnbox
DB_USER=fnbox
DB_PASSWORD=fnbox
DB_HOST=127.0.0.1
DB_PORT=5432

# === Redis Configuration ===
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# === Email/SMTP Configuration ===
# Enable email in production by setting ENABLE_EMAIL=1
ENABLE_EMAIL=0
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@localhost

# === Kubernetes Configuration ===
KUBERNETES_ENABLED=True
KUBERNETES_NAMESPACE=fnbox-functions
FUNCTION_BACKEND=kubernetes

# === OIDC/SSO Configuration (Optional) ===
# Supported providers: keycloak, authelia, authentik
# Leave empty to disable OIDC
OIDC_PROVIDER_TYPE=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_SERVER_URL=

# === Production OIDC Examples ===
# Keycloak:
#   OIDC_PROVIDER_TYPE=keycloak
#   OIDC_SERVER_URL=https://auth.yourdomain.com/realms/master/.well-known/openid-configuration
#
# Authelia:
#   OIDC_PROVIDER_TYPE=authelia
#   OIDC_SERVER_URL=https://auth.yourdomain.com/.well-known/openid-configuration
#
# Authentik:
#   OIDC_PROVIDER_TYPE=authentik
#   OIDC_SERVER_URL=https://auth.yourdomain.com/application/o/{slug}/.well-known/openid-configuration

# === Security Settings (Production) ===
# These are automatically enabled when DEBUG=0, but you can override them here
# SECURE_SSL_REDIRECT=1  # Redirect all HTTP to HTTPS
# SECURE_HSTS_SECONDS=31536000  # HTTP Strict Transport Security (1 year)
# SECURE_HSTS_INCLUDE_SUBDOMAINS=1  # Include subdomains in HSTS
# SECURE_HSTS_PRELOAD=1  # Allow HSTS preload
# SESSION_COOKIE_SECURE=1  # Only send session cookie over HTTPS
# CSRF_COOKIE_SECURE=1  # Only send CSRF cookie over HTTPS
